<UserControl x:Class="OpenKh.Tools.Common.Controls.TimelineEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenKh.Tools.Common.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="120">
    <Grid Background="#FF35AB84" Height="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="{StaticResource DynamicImage_16x}" />
        <Viewbox Grid.Column="1" HorizontalAlignment="Left">
            <TextBlock Text="Label" FontFamily="Arial"/>
        </Viewbox>
    </Grid>
</UserControl>
